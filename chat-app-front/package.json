{
    "name": "chat-app-front",
    "version": "0.1.0",
    "description": "Chat App Front-End",
    "private": true,
    "type": "module",
    "scripts": {
        "start": "vite --port 3000 --host",
        "build": "vite build",
        "preview": "vite preview",
        "lint": "cd .. && eslint \"chat-app-front/**/*.{ts,tsx}\"",
        "lint:fix": "npm run lint -- --fix",
        "format": "prettier --write \"**/*.{ts,tsx,css}\"",
        "format:check": "prettier --check \"**/*.{ts,tsx,css}\"",
        "test": "vitest run",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "test:e2e": "playwright test",
        "test:e2e:ui": "playwright test --ui",
        "test:e2e:headed": "playwright test --headed",
        "test:e2e:debug": "playwright test --debug",
        "test:e2e:setup": "docker-compose -f docker-compose.test.yaml up -d --build && sleep 30",
        "test:e2e:cleanup": "docker-compose -f docker-compose.test.yaml down -v",
        "test:e2e:complete": "npm run test:e2e:setup && npm run test:e2e; EXIT_CODE=$?; npm run test:e2e:cleanup; exit $EXIT_CODE"
    },
    "dependencies": {
        "@ant-design/icons": "^6.0.1",
        "@apollo/client": "^3.6.9",
        "antd": "^5.27.3",
        "graphql": "^16.5.0",
        "graphql-ws": "^5.9.1",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-markdown": "^10.1.0",
        "remark-gfm": "^4.0.1"
    },
    "devDependencies": {
        "@playwright/test": "^1.55.0",
        "@testing-library/jest-dom": "^5.17.0",
        "@testing-library/react": "^13.3.0",
        "@testing-library/user-event": "^14.4.3",
        "@types/node": "^20.19.17",
        "@types/react": "^18.3.24",
        "@types/react-dom": "^18.3.7",
        "@vitejs/plugin-react": "^5.0.2",
        "@vitest/ui": "^3.2.4",
        "jsdom": "^26.1.0",
        "typescript": "^5.9.2",
        "vite": "^7.1.4",
        "vitest": "^3.2.4"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}

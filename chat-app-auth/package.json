{
  "name": "chat-app-auth",
  "version": "1.0.0",
  "description": "Chat App Authentication webhook",
  "type": "module",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "dev": "tsx src/index.ts",
    "dev:watch": "nodemon --exec tsx src/index.ts",
    "lint": "cd .. && eslint \"chat-app-auth/src/**/*.{ts,js}\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js}\"",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "test:integration": "npm run test:integration:setup && node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.integration.config.ts; EXIT_CODE=$?; npm run test:integration:cleanup; exit $EXIT_CODE",
    "test:integration:watch": "npm run test:integration:setup && node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.integration.config.ts -- --watch",
    "test:integration:coverage": "npm run test:integration:setup && node --experimental-vm-modules node_modules/jest/bin/jest.js --config jest.integration.config.ts --coverage; EXIT_CODE=$?; npm run test:integration:cleanup; exit $EXIT_CODE",
    "test:integration:setup": "docker-compose -f docker-compose.test.yaml up -d chat-app-db-test chat-app-graphql-engine-test && sleep 10",
    "test:integration:cleanup": "docker-compose -f docker-compose.test.yaml down",
    "test:all": "npm run test:unit && npm run test:integration"
  },
  "author": "Sami Oksanen",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "knex": "^3.1.0",
    "objection": "^3.0.1",
    "objection-db-errors": "^1.1.2",
    "passport": "^0.7.0",
    "passport-http-bearer": "^1.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.16.3",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/passport": "^1.0.17",
    "@types/passport-http-bearer": "^1.0.41",
    "@types/passport-local": "^1.0.38",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.0",
    "@typescript-eslint/parser": "^8.44.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
